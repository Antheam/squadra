<!-- Content to display empty state if no teams exist fro company yet -->
<% if users.count == 0 %>
  <p>
    Looks like no users have been set up yet, why not create the first?
  </p>
<!-- Content to display table containing teams -->
<% else %>

<div class="card">
  <h5 class="card-header">Meet our latest team member.... 🥁🥁🥁</h5>
  <div class="card-body">
    <h5 class="card-title"><b>Chris Camacho</b></h5>
    <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
    <a href="#" class="btn btn-info">Checkout Their Profile</a>
  </div>
</div>


  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Email</th>
          <th scope="col">First Name</th>
          <th scope="col">Last Name</th>
          <th scope="col">Created</th>
          <th scope="col">Updated</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% users.each do |user| %>
        <tr>
          <th scope="row"><%= link_to user.email, user_path(user) %></th>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td> <%= time_ago_in_words(user.created_at) + " ago" %> </td>
          <td> <%= time_ago_in_words(user.updated_at) + " ago" %> </td>
          <td>
            <%= link_to 'Delete', user_path(user), method: :delete,
                data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
