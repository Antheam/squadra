<div class="form-group">
    <%= form_for @user do |f| %>
<div class="field">
    <%= f.label :first_name %>
      <div class="col-sm-10">
    <%= f.text_field :first_name %>
  </div>
    </div>

<div class="field">
    <%= f.label :last_name %>
      <div class="col-sm-10">
    <%= f.text_field :last_name %>
  </div>
    </div>
<div class="form-group">
    <%= f.label :username %>
      <div class="col-sm-10">
    <%= f.text_field :username %>
  </div>
    </div>
<div class="form-group">
    <%= f.label :email %>
      <div class="col-sm-10">
    <%= f.text_field :email %>
  </div>
    </div>
<div class="form-group">
    <%= f.label :bio %>
