<section>
  <div class="container">
    <h1>Edit: <%= @user.username %></h1>
    <br>
    <div class="form-group">
      <%= form_for @user do |f| %>

        <div class="form-group row">
          <%= f.label :company_id, "Company" %>
          <div class="col-sm-10">
            <%= f.text_field :company_id, value: @user.company.name, readonly: true, class: "form-control-plaintext" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :username %>
          <div class="col-sm-10">
            <%= f.text_field :username, readonly: true, class: "form-control-plaintext" %>
          </div>
        </div>

        <div class="form-group row">
          <%=f.label :first_name %>
          <div class="col-sm-10">
            <%=f.text_field :first_name, class: "form-control"%>
          </div>
        </div>

        <div class="form-group row">
          <%=f.label :last_name %>
          <div class="col-sm-10">
            <%=f.text_field :last_name, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :gender %>
          <div class="col-sm-10">
            <%= f.select :gender, @user.gender_options, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :email %>
          <div class="col-sm-10">
            <%= f.text_field :email, class: "form-control" %>
          </div>
        </div>

        <%= f.submit class: "btn btn-success"%>
      <% end %>
    </div>


  </div>
</section>
