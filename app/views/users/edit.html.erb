<div class="container">
  <h1>Edit: </h1>
  <br>
  <div class="form-group">
    <%= form_for @user do |f| %>

    <div class="form-group row">
      <div class="col-3">
        <%=f.label :first_name %>
      </div>
      <div class="col-9">
        <%= f.text_field :first_name, class: "form-control #{' is-invalid' if @user.errors[:first_name].any? }" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-3">
        <%=f.label :last_name %>
      </div>
      <div class="col-9">
        <%= f.text_field :last_name, class: "form-control #{' is-invalid' if @user.errors[:last_name].any? }" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-3">
        <%=f.label :gender %>
      </div>
      <div class="col-9">
        <%= f.select :gender, @user.gender_options, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-3">
        <%=f.label :email %>
      </div>
      <div class="col-9">
        <%= f.text_field :email, class: "form-control #{' is-invalid' if @user.errors[:email].any? }" %>
      </div>
    </div>


      <%= f.submit class: "btn btn-success"%>
    <% end %>
  </div>
</div>
