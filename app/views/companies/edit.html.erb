<div class="container">
  <br>

  <h3>Edit Company Details:</h3>
  <%= form_for @company do |f| %>

  <div class="form-group row">
    <div class="col-3">
      <%= f.label :name %>
    </div>
    <div class="col-9">
      <%= f.text_field :name, class: "form-control #{' is-invalid' if @company.errors[:name].any? }" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-3">
      <%= f.label :bio %>
    </div>
    <div class="col-9">
      <%= f.text_field :bio, class: "form-control #{' is-invalid' if @company.errors[:bio].any? }" %>
    </div>
  </div>


  <%= f.submit class: "btn btn-success"%>

  <% end %>
</div>
