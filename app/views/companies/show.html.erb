<section>
  <div class="container">
    <h1><%= @company.name %></h1>
    <hr>
    <%= button_to "Edit", edit_company_path(@company), method: :get, class: "btn-sm btn-info", style: "float:right;" %>
    <h3><%= @company.bio %></h3>

    <h3><%= pluralize(@company.users.count, "User") %>:</h3>

    <br>

    <b>
      <i>
        to add more users just send them this link: <%= request.base_url %><%= signup_path(company_id: @company.id) %>
      </i>
    </b>
      <br>

     <br>
    <%= render partial: "users/users", locals: {users: @company.users} %>

  </div>
</section>
