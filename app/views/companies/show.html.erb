<% if @answers_needed  %>
  <div class="alert alert-warning text-center" role="alert">
    You haven't completed your onboarding!, please take 5 mins to complete your
    onboarding questions in <%= link_to "your profile", user_path(current_user) %>
  </div>
<% end %>


<div class="container">
  <h1><%= @company.name %></h1>
  <%= button_to "Edit", edit_company_path(@company), method: :get, class: "btn-sm btn-info", style: "float:right;" %>
  <h3><%= "'#{@company.bio}'" %></h3>
  <hr>
  <h5>
    <%= pluralize(@company.users.count, "User") %>:
  </h5>

  <p>
    <i>
      to add more users just send them this link:
    </i>
    <b>
      <%= link_to "#{@company.name} - Sign Up Link", "#{request.base_url}#{signup_path(company_id: @company.id)}"  %>
    </b>
  </p>

  <br>
  <%= render partial: "users/users", locals: {users: @users} %>

</div>
