<%= form_for @company do |f| %>

  <div class="form-group row">
    <div class="col-sm-1">
      <%= f.label :name %>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-1">
      <%= f.label :bio %>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :bio, class: "form-control" %>
    </div>
  </div>

  <%= f.submit class: "btn btn-success"%>
<% end %>
